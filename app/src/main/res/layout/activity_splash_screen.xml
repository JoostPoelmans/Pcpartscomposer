<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joost.pcpartscomposer.SplashScreen">

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@mipmap/ic_launcher_pc_parts_composer"
    android:id="@+id/splashscreen_icon"
    android:layout_centerInParent="true" />

    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:layout_below="@id/splashscreen_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:max="100"
        app:ringColor="@color/golden"
        app:ringProgressColor="@color/colorPrimaryDark"
        app:ringWidth="3dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimaryDark"
        app:textIsShow="true"
        app:textSize="16sp"
        />

</RelativeLayout>
